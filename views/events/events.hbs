<div class="container">
    <h1>Events Available</h1>
    <hr class="mb-3">

    <div class="row text-center">
        {{#each events}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="./../../images/evento 1.png" class="card-img-top" alt="Event Image">
                <div class="card-body">
                    <h3 class="card-title">{{name}}</h3>
                    <h6 class="card-text">{{eventType}}</h6>
                    <a href="/events/details/{{_id}}" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <hr>
    <a href="/" class="btn btn-dark">Home Page</a>
</div>