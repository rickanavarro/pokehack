<div class="container">
    <h1>Events Available</h1>
    <hr class="mb-3">

    <div class="row">
        {{#each events}}
        <div class="col-md-4 mb-4">
            <div class="card">
                {{!-- <img src="imagen-del-evento.jpg" class="card-img-top" alt="Event Image"> --}}
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{eventType}}</p>
                    <p class="card-text">Location: {{location}}</p>
                    <a href="/events/details/{{_id}}" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <hr>
    <a href="/" class="btn btn-dark">Home Page</a>
</div>