<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-3 d-flex align-items-center">
            <div class="card pokemon">
                <div class="card-body text-center">
                    <h1 class="text-center">{{name}}</h1>
                    <hr>
                    <img src={{sprites.versions.generation-iv.platinum.front_default}} alt="{{name}}">
                    {{!-- <p class="text-center">id: {{id}}</p> --}}
                    <p class="text-center"><strong>Weight:</strong> {{weight}} Kg</p>
                    <p class="text-center"><strong>Height:</strong> {{height}} Cm</p>
                    <div class="text-left"><strong>Type:</strong>
                        <ul class="list-unstyled">
                            <li>{{types.[0].type.name}}</li>
                            <li>{{types.[1].type.name}}</li>
                            <li>{{types.[2].type.name}}</li>
                        </ul>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>