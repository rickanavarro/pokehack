<div class="user-profile">
    <div class="container">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    {{!-- <img src={{user.profileImg}} class="img-fluid rounded-start"> --}}
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{username}} </h5>
                        <p class="card-text">{{user.name}}</p>
                        <p class="card-text">{{user.surname}}</p>
                        <p class="card-text">{{user.email}}</p>
                        {{#each pokemons}}
                        <p class="card-text">{{name}}</p>
                        <img class="profilePokemon" src={{sprites.front_default}} alt="">
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>